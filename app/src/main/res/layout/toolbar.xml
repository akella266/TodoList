<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="?attr/colorPrimary"
    app:contentInsetStart="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    >

    <LinearLayout
        android:id="@+id/toolbar_elements"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toolbar_left_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center|start"
            android:padding="8dp"
            android:textColor="@color/color_toolbar_buttons"
            android:textSize="@dimen/toolbar_text_size"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            tools:text="Edit"/>


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:layout_weight="2"
            android:textSize="@dimen/toolbar_text_size"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
            android:gravity="center"
            tools:text="Title"/>


        <TextView
            android:id="@+id/toolbar_right_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_add_blue_24dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center|end"
            android:padding="8dp"
            android:textSize="@dimen/toolbar_text_size"
            android:textColor="@color/color_toolbar_buttons"
            style="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle"/>
    </LinearLayout>

</android.support.v7.widget.Toolbar>